                </tr>
                <tr>
                    <td>Số lượng bài đăng</td>
                    <td colspan="2">@Model.BaiDang.Count</td>
                </tr>
                <tr>
                    <td>Ngày gia nhập</td>
                    <td colspan="2">@Model.NgayGiaNhap</td>
                </tr>
