
@{
    ViewBag.Title = "Other";
    Layout = "~/Views/Shared/my_Layout.cshtml";
}

@model FORUM_WEB_2._0.Models.FrameWorks.TaiKhoan
@{
    var session = (UserLogin)Session[FORUM_WEB_2._0.Common.CommonSession.USER_LOGIN];
}
@section styles{
    <style>
        .user-avatar {
            display: flex;
            align-items: center;
            /* justify-content: center; */
        }

            .user-avatar > img {
                height: 100px;
                width: 100px;
                border-radius: 50%;
            }

        .button-save {
            display: flex;
            justify-content: center;
            align-items: center;
        }

            .button-save > button {
                width: 170px;
                height: 55px;
            }
    </style>
}
<h2 style="text-align: center; color: white;">Account detail</h2>
<div class="container" style="background-color: white; padding: 15px;">
