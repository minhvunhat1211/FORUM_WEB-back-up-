@model FORUM_WEB_2._0.Models.FrameWorks.BinhLuan

@{
    ViewBag.Title = "Edit_Comment";
    Layout = "~/Views/Shared/my_Layout.cshtml";
}

@section styles{
    <style>
        btn-default {
            background-color: #ecf0f1;
        }
    </style>
}
<div class="container" style="margin-top: 15px">
    @using (Html.BeginForm(new { @class = "edit-form" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_BinhLuan)
        @Html.HiddenFor(model => model.ID_BaiDang)
        @Html.HiddenFor(model => model.NgayBinhLuan)
        @Html.HiddenFor(model => model.TenDangNhap)
        <div class="form-group">
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("PostPage","PostPage", new { id = Model.BaiDang.ID_BaiDang})"><button class="btn btn-default">Back</button></a>
        
    </div>
</div>
<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'advlist autolink lists link image charmap print preview hr anchor pagebreak',
        toolbar_mode: 'floating',
    });
</script>
